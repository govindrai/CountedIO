
%canvas#myChart {"width"=>"200" "height"=>"200"}

:javascript
  function showDayData(event, activeElements) {
    data = activeElements[0]._model.label
    var target = '#' + data + "-meals"
    $('#Breakfast-meals').hide()
    $('#Lunch-meals').hide()
    $('#Dinner-meals').hide()
    $('#Snack-meals').hide()
    $(target).toggle()
  }


:javascript
  var ctx = $("#myChart");
  var data = {
    labels: ["Breakfast", "Lunch", "Dinner", "Snack", "Remaining Calories"],
    datasets: [
        {
            data: #{@chart_data},
            backgroundColor: [
                "#FF6384",
                "#36A2EB",
                "#FFCE56",
                "#FFA500",
                "#2EDF2E"
            ],
            hoverBackgroundColor: [
                "#E55A77",
                "#3399DE",
                "#EEC04F",
                "#EB9800",
                "#28BF28"
            ]
        }]
  };

  var myDoughnutChart = new Chart(ctx, {
    type: 'doughnut',
    data: data,
    options: {
      onClick: showDayData
    }
  });



