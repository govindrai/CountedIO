.foods-container.col-12
  -4.times do |x|
    .food-container.hidden{id:"#{Meal.get_meal_types[x]}-meals"}
      = link_to "X", '', class: "close-meals"
      = Meal.get_meal_types[x]
      .table-container
        %table
          %tbody
            %tr
              %td Item
              %td Type
              %td Calories
              - meals[x].each_with_index do |meal, index|
                %tr
                  %td= meal.food_name
                  %td= meal.meal_type
                  %td= meal.calories