
%button.refresh Refresh

%span
  = link_to "&#8678;".html_safe, LinkHelper.previous_day(@date, @user), class: 'back'
%span
  = @date.strftime("%F")
%span
  = link_to "&#8680;".html_safe, LinkHelper.next_day(@date, @user), class: 'forward'

- if @authorized
  %h1= @user.name
  -if params[:week]
    = render partial: 'week', locals: { meals: @meals}
  -elsif params[:month]
    = render partial: 'month', locals: { meals: @meals}
  -else
    = render partial: 'day', locals: { meals: @meals}




